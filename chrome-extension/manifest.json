{
  "manifest_version": 3,
  "name": "YT Music Queue Collector",
  "version": "2.0.0",
  "description": "Collect YouTube Music playlist/watch IDs for the Lyric Video Maker web UI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "YT Music Queue Collector",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
